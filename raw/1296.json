3"}],"replies":[{"embeddable":true,"href":"https://blogbooks.net/wp-json/wp/v2/comments?post=1296"}],"version-history":[{"count":1,"href":"https://blogbooks.net/wp-json/wp/v2/posts/1296/revisions"}],"predecessor-version":[{"id":1309,"href":"https://blogbooks.net/wp-json/wp/v2/posts/1296/revisions/1309"}],"wp:attachment":[{"href":"https://blogbooks.net/wp-json/wp/v2/media?parent=1296"}],"wp:term":[{"taxonomy":"category","embeddable":true,"href":"https://blogbooks.net/wp-json/wp/v2/categories?post=1296"},{"taxonomy":"post_tag","embeddable":true,"href":"https://blogbooks.net/wp-json/wp/v2/tags?post=1296"}],"curies":[{"name":"wp","href":"https://api.w.org/{rel}","templated":true}]}}